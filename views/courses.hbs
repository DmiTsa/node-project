<h1>COURSES</h1>
{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6">
        <div class="card">
          <div class="card-image">
            <img src={{img}} />
            <span class="card-title">{{title}}</span>
          </div>
          <div class="card-content">
            {{title}}
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action">
            <a href="/courses/{{id}}" target="_blank">Перейти к курсу</a>
            <a href="/courses/{{id}}/edit?allow=true">Редактировать</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  Курсов нет
{{/if}}